drop table customer;--Customer cedvelini silirik

create table Customer(customer_id number(5) generated as identity,
customer_name varchar2(20) not null,
customer_lastname varchar2(20) not null,
adress varchar(20),
email varchar(20) unique,
phone_number char(10) unique
);--Customer cedevlini yaradiriq

Alter table Customer
rename column adress to customer_adress;--Sutun adini deyisirik

Alter table Customer
set unused column customer_adress;--customer_adress sutunu gorunmez olur

Alter table Customer
drop unused columns;--Unused olunmus column-lari silirik
--Cedvel boyuk olduqda unused edib, sonra silmek daha yaxsidir. Tekce drop-la silende gec isleyir

Alter table Customer
add bdate date;--Yeni sutun elave edirik

Insert into Customer(customer_name,customer_lastname,email,phone_number,bdate)
values('Ayse','Ehmedova','ayse@mail.com','0555267473',to_date('12.05.2003','DD.MM.YYYY')); --Setir elave edirik
commit;--Yadda saxlayiriq

Select * from Customer;--Cedveli yaradanda generated as identity yazmisdiq deye avtomatik id verilir

Insert into Customer(customer_name,customer_lastname,email,phone_number,bdate)
values('Gulay','Memmedova','gulay@mail.com','0555267498',to_date('11.04.2002','DD.MM.YYYY'));--Setir elave edirik
commit;

Insert into Customer(customer_name,customer_lastname,email,phone_number,bdate)
values('Gunay','Mamedova','gunay@mail.com','0515267498',to_date('10.04.2000','DD.MM.YYYY'));--Setir elave edirik
commit;

alter table Customer
modify customer_id generated by default as identity;--Artiq customer_id ucun ozumuz qiymet vere bilerik
--DDL emrlerinden sonra commit-e ehtiyac yoxdur

Insert into Customer values(4,'Gunel','Aliyeva','gunel@mail.com','0505267498',to_date('09.04.2000','DD.MM.YYYY'));--Insert edirik
commit;

Select * from Customer;

Update Customer set customer_name='Ayten' where customer_id=4;--Customer_id-e gore update edirik
commit;

Delete from Customer where customer_id=4;--Id-si 4 olan setri silirik
commit;

Select first_name, last_name, salary from Employees;--Select projection

Select * from employees;

Select last_name, first_name, salary, department_id from Employees where department_id=50 and salary=6500;--Filterleyirik

Select  max(salary), department_id from Employees group by department_id order by 1;--Gruplasdiririq ve 1-ciye gore siralayiriq

Select  max(salary) as sal, department_id from Employees group by department_id order by sal;--Order by-da alias isledirik

Select  max(salary), department_id from Employees group by department_id having max(salary)>11000;--Neticeni filterleyirik

Select  max(salary) sal, department_id from Employees group by department_id having sal>11000;--Group by ve havingde alias islemir

Select  max(salary), department_id from Employees group by department_id order by max(salary) desc fetch first 5 rows only;--Qruplasdirib, boyukden kiciye siralanmisda ilk 5 setri cixaririq

Select employee_id from Employees where employee_id between &s1 and &s2;--single ampersand(execute edende qiymetleri ozumuz yaziriq)

Select employee_id from Employees where employee_id between &&s1 and &&s2;--double ampersand(execute edende qiymeti bir defe yaziriq, sistem yadda saxlayiriq)

undefine s1;
undefine s2;

--Undefine etdikden sonra yeniden sorgunu isletsek, qiymet daxil ede bileceyik

